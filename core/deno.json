{
  "tasks": {
    "dev": "deno run --watch --unstable-sloppy-imports --allow-net --allow-read --allow-write --allow-env --allow-run --allow-ffi src/main.ts",
    "start": "deno run --unstable-sloppy-imports --allow-net --allow-read --allow-write --allow-env --allow-run --allow-ffi src/main.ts",
    "test": "deno test --allow-read --allow-write",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "tsoa": "tsoa routes && tsoa spec"
  },
  "imports": {
    "tsoa": "npm:tsoa@^6.5.1",
    "@tsoa/runtime": "npm:@tsoa/runtime@^6.5.1",
    "express": "npm:express@^4.18.2",
    "@types/express": "npm:@types/express@^4.17.21",
    "sqlite": "jsr:@db/sqlite@0.12"
  },
  "compilerOptions": {
    "strict": true,
    "lib": [
      "deno.window",
      "deno.worker"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "nodeModulesDir": "auto"
}
